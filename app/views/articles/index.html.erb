<%= render 'shared/header' %>

<% if user_signed_in? %>

  <div class="secondary-page-form">

    <h5 class="secondary-page-form-header">New Article</h5>

    <%= simple_form_for @article do |f| %>
      <%= f.input :title,
                  required: true,
                  label: false,
                  placeholder: "title",
                  autofocus: true %>
      <%= f.input :content,
                  required: true,
                  label: false,
                  placeholder: "content",
                  autofocus: true %>
      <%#= f.input :photo %>
      <%#= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit,
                   'Add Article',
                   class: 'secondary-page-form-button' %>
    <% end %>

  </div>

<% end %>

<div class="secondary-page-container hidden-xs">
  <div class="secondary-page-header">
    <h3>Articles</h3>
  </div>

  <div class="article-content">
    <% @articles.each do |article| %>

    <%#= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>

    <h4><%= article.title %></h4>
    <p><%= article.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><%= article.content %></p>

    <% end %>
  </div>
</div>

<div class="secondary-page-container-small hidden-sm hidden-md hidden-lg">
  <div class="secondary-page-header">
    <h3>Articles</h3>
  </div>
</div>
