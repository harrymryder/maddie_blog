<div class="secondary-page-form">
  <h5 class="secondary-page-form-header">Edit Book</h5>
  <%= simple_form_for(@book) do |f| %>
    <%= f.input :title,
                required: true,
                label: false,
                placeholder: "title",
                autofocus: true %>
    <%= f.input :author,
                required: true,
                label: false,
                placeholder: "author",
                autofocus: true %>
    <%= f.input :description,
                required: true,
                label: false,
                placeholder: "description",
                autofocus: true %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit,
                 'Save Changes',
                 class: 'secondary-page-form-button' %>
  <% end -%>
</div>
