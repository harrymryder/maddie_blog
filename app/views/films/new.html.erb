<div class="secondary-page-form">
  <h5 class="secondary-page-form-header">New Film</h5>
  <%= simple_form_for(@film) do |f| %>
      <%= f.input :title,
                  required: true,
                  label: false,
                  placeholder: "title",
                  autofocus: true %>
      <%= f.input :date,
                  required: true,
                  label: false,
                  placeholder: "date",
                  autofocus: true %>
      <%= f.input :description,
                  required: true,
                  label: false,
                  placeholder: "description",
                  autofocus: true %>
      <%= f.input :photo,
                  label: false,
                  placeholder: "upload a photo" %>
      <%= f.input :photo_cache,
                  as: :hidden,
                  label: false %>
      <%= f.button :submit,
                   'Add Film',
                   class: 'secondary-page-form-button' %>
  <% end -%>
</div>
